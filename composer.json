{
    "name": "renoki-co/php-k8s",
    "description": "Control your Kubernetes clusters with this PHP-based Kubernetes client. It supports any form of authentication, the exec API, and it has an easy implementation for CRDs.",
    "keywords": [
        "laravel",
        "php",
        "kubernetes",
        "k8s",
        "k3s",
        "k0s",
        "cluster",
        "api",
        "kubeadm",
        "kubeapi",
        "kube"
    ],
    "license": "Apache-2.0",
    "homepage": "https://github.com/renoki-co/php-k8s",
    "authors": [
        {
            "name": "Alex Renoki",
            "homepage": "https://github.com/rennokki",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "guzzlehttp/guzzle": "^7.10",
        "illuminate/macroable": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "ratchet/pawl": "^0.4.1",
        "symfony/process": "^7.3.4",
        "composer/semver": "^3.4",
        "ext-json": "*"
    },
    "suggest": {
        "ext-yaml": "YAML extension is used to read or generate YAML from PHP K8s internal classes."
    },
    "autoload": {
        "psr-4": {
            "RenokiCo\\PhpK8s\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RenokiCo\\PhpK8s\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^10.6.0",
        "phpunit/phpunit": "^10.0|^11.5",
        "vimeo/psalm": "^6.13.1"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
